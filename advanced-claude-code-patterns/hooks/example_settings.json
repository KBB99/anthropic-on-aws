{
  "permissions": {
    "deny_paths": [
      "**/.env*",
      "**/*secret*",
      "**/*password*",
      "**/*credential*",
      "**/*.key",
      "**/*.pem",
      "**/*.crt",
      "**/*.cer",
      "**/node_modules/**",
      "**/__pycache__/**",
      "**/.venv/**",
      "**/venv/**",
      "**/.git/objects/**",
      "**/.aws/**",
      "**/.ssh/**"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/log_tool_use.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/use_uv.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/validate_tests.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/black_formatter.py"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/python_lint.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Starting EPCC workflow phase' >&2"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Task completed' >&2"
          }
        ]
      }
    ]
  },
  "model": {
    "default": "sonnet",
    "complex_tasks": "opus"
  },
  "tools": {
    "file_editor": {
      "prefer": "MultiEdit"
    },
    "search": {
      "prefer": "Grep"
    }
  },
  "preferences": {
    "auto_format": true,
    "lint_on_save": true,
    "test_first": true,
    "use_uv": true,
    "epcc_workflow": true
  },
  "logging": {
    "enabled": true,
    "directory": ".claude",
    "max_size_mb": 10,
    "retention_days": 30
  }
}